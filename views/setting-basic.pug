              input.custom-control-input(type='radio', name='radio4', checked)
              span.custom-control-label 절사 안함
            label.custom-control.custom-radio.custom-control-inline
              input.custom-control-input(type='radio', name='radio4')
              span.custom-control-label 1원 단위 절사
            label.custom-control.custom-radio.custom-control-inline
              input.custom-control-input(type='radio', name='radio4')
              span.custom-control-label 10원 단위 절사
            label.custom-control.custom-radio.custom-control-inline
              input.custom-control-input(type='radio', name='radio4')
              span.custom-control-label 100원 단위 절사
