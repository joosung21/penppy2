//- 방막기 Modal
#blockModal.modal.fade(tabindex='-1')
  .modal-dialog.modal-sm
    .modal-content
      .modal-header
        h5.modal-title 선택날짜 일괄할인
        a.close(data-dismiss='modal')
          img(src='/assets/images/close.svg')
      .modal-body
        .form-group.row
          label.col-sm-2.pt-1 선택날짜
          .col-sm-10
            label.custom-control.custom-radio.custom-control-inline.mr-4
              input.custom-control-input(type='radio', name='cancelDelayRadio', checked)
              span.custom-control-label 방막기
            label.custom-control.custom-radio.custom-control-inline
              input.custom-control-input(type='radio', name='cancelDelayRadio')
              span.custom-control-label 전화문의만 받기
            .input-group(style='width: 18rem')
              .input-group-prepend
                .input-group-text 총 6개 객실 중
              input.form-control.text-right(type='number', value='4')
              .input-group-append
                .input-group-text 개 방막기
        .form-group.row
          label.col-sm-2.pt-1 메모
          .col-sm-10
            textarea.form-control(rows='4')
        .text-center.py-3
          button.btn.btn-primary.btn-lg(type='button', data-dismiss='modal') 저장

