  .content-container
    .artboard
      .board-title 객실 달력
      .text-center
        .calendar-controler
          .form-inline.justify-content-center
            .year-month 2018년 1월
            .btn-group.mx-3
              button.btn.btn-white.border-right-0(type='button')
                img(src='/assets/images/go-pre.svg')
              button.btn.btn-white.border-left-0(type='button')
                img(src='/assets/images/go-next.svg')
            button.btn.btn-white 오늘

      .row
        .col
          .status-model.d-flex.justify-content-start.mt-3
            .status-badge.available
            span.mr-3 예약가능
            .status-badge.waiting
            span.mr-3 입금대기
            .status-badge.complete
            span.mr-3 예약완료
            .status-badge.callonly
            span.mr-3 전화문의
            .status-badge.blocked
            span.mr-3 예약불가
        .col.text-right
          .btn-group
            a.btn.btn-white(href='/calendar', data-toggle='tooltip', title='달력으로 보기')
              img(src='/assets/images/view-calendar-on.svg', style='margin-top: -2px')
            a.btn.btn-white(href='/calendar-chart', data-toggle='tooltip', title='차트로 보기')
