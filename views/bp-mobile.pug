            img(src='/images/adult.svg')
            input.form-control-plaintext.form-control-lg(type='number', value='2', min='1', max='99')
          .age
            img(src='/images/child.svg')
            input.form-control-plaintext.form-control-lg(type='number', value='0', min='0', max='99')
