    .row.no-gutters
      .date-box.col.border-right.border-bottom
        small 체크인
        input.form-control-plaintext.form-control-lg.pt-0(type="text", value='금요일, 4월 7일')
      .date-box.col.border-bottom
        small 체크아웃
        input.form-control-plaintext.form-control-lg.pt-0(type="text", value='토요일, 4월 8일')
