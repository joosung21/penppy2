include ./includes/header.pug

//-------- 설정: 자동할인설정 수정 Page ---------//
body.two-depth(name='setting', page='auto')
  include ./includes/main-nav-left.pug
  include ./includes/sub-nav.pug
  .content-container
    .artboard
      .board-title 자동할인 설정
      .board-container
        .form-group.row
          label.col-sm-2.pt-1 기간 선택
          .col-sm-10
            .form-inline
              label.custom-control.custom-radio.custom-control-inline.mr-4
                input.custom-control-input(type='radio', name='radio1')
                span.custom-control-label 상시
              label.custom-control.custom-radio.custom-control-inline
                input.custom-control-input(type='radio', name='radio2', checked)
                span.custom-control-label 기간
              input.form-control.form-control-datepicker(type='text', value='2017.07.16(수)', size='18')
              span.px-2 ~
              input.form-control.form-control-datepicker.mr-2(type='text', value='2017.08.20(목)', size='18')
        .form-group.row
          label.col-sm-2 할인율
          .col-sm-10
            .info.pt-0.pb-4 할인율 설정시 기존의 할인요금에 추가로 적용됩니다.
            .form-inline.mb-2
              span 판매요금 기준
              select.custom-select.mx-2
                option %
                option 원
              span 할인
            .form-inline
              .input-group.mb-2(style='width: 21rem')
                .input-group-prepend
                  .input-group-text.justify-content-end(style='width: 7rem') 입실 3일전
                input.form-control.text-right(type='text', value='30')
                .input-group-append
                  .input-group-text % 자동할인
              button.btn.btn-white.btn-close.ml-2.mb-1(type='button', data-toggle='tooltip', title='삭제')
                i.fa.fa-times.fa-lg
            .form-inline
              .input-group.mb-2(style='width: 21rem')
                .input-group-prepend
                  .input-group-text.justify-content-end(style='width: 7rem') 입실 2일전
                input.form-control.text-right(type='text', value='40')
                .input-group-append
                  .input-group-text % 자동할인
              button.btn.btn-white.btn-close.ml-2.mb-1(type='button', data-toggle='tooltip', title='삭제')
                i.fa.fa-times.fa-lg
            .form-inline
              .input-group.mb-2(style='width: 21rem')
                .input-group-prepend
                  .input-group-text.justify-content-end(style='width: 7rem') 입실 1일전
                input.form-control.text-right(type='text', value='50')
                .input-group-append
                  .input-group-text % 자동할인
              button.btn.btn-white.btn-close.ml-2.mb-1(type='button', data-toggle='tooltip', title='삭제')
                i.fa.fa-times.fa-lg
            .form-inline
              .input-group.mb-2(style='width: 21rem')
                .input-group-prepend
                  .input-group-text.justify-content-end(style='width: 7rem') 입실 당일
                input.form-control.text-right(type='text', value='70')
                .input-group-append
                  .input-group-text % 자동할인
              button.btn.btn-white.btn-close.ml-2.mb-1(type='button', data-toggle='tooltip', title='삭제')
                i.fa.fa-times.fa-lg

            button.btn.btn-white.btn-small(type='button')
              i.fa.fa-plus.fa-lg.mr-1
              | 추가

        .form-group.row
          label.col-sm-2.pt-1 객실 선택
          .col-sm-10

            .mb-2
              label.custom-control.custom-checkbox.custom-control-inline
                input.custom-control-input(type='checkbox', checked)
                span.custom-control-label 전체 객실
            .mb-2
              label.custom-control.custom-checkbox.custom-control-inline
                input.custom-control-input(type='checkbox')
                span.custom-control-label 해
            .mb-2
              label.custom-control.custom-checkbox.custom-control-inline
                input.custom-control-input(type='checkbox')
                span.custom-control-label 달
            .mb-2
              label.custom-control.custom-checkbox.custom-control-inline
                input.custom-control-input(type='checkbox')
                span.custom-control-label 별
        .form-group.row
          label.col-sm-2.pt-1 채널 선택
          .col-sm-10
            .mb-2
              label.custom-control.custom-checkbox.custom-control-inline
                input.custom-control-input(type='checkbox', checked)
                span.custom-control-label 전체 채널
            .mb-2
              label.custom-control.custom-checkbox.custom-control-inline
                input.custom-control-input(type='checkbox')
                span.custom-control-label 실시간 예약창
            .mb-2
              label.custom-control.custom-checkbox.custom-control-inline
                input.custom-control-input(type='checkbox')
                span.custom-control-label 네이버
            .mb-2
              label.custom-control.custom-checkbox.custom-control-inline
                input.custom-control-input(type='checkbox')
                span.custom-control-label 에어비앤비

        .row.text-center.pt-4.no-gutters
          .col-8.offset-2
            button.btn.btn-secondary.btn-lg.mr-1(type='button') 취소
            button.btn.btn-primary.btn-lg(type='button') 저장
          .col-2.text-right.pt-1
            button.btn.btn-white(type='button')
              i.fa.fa-trash.fa-lg.mr-1
              b 삭제

    include ./includes/footer.pug