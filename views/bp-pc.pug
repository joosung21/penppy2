                      img.d-block.w-100(src='/images/temp-room-02.jpg')
                    .carousel-item
                      img.d-block.w-100(src='/images/temp-room-03.jpg')
                  a.carousel-control-prev(href='#roomPicture1', role='button', data-slide='prev')
                    span.carousel-control-prev-icon(aria-hidden='true')
                  a.carousel-control-next(href='#roomPicture1', role='button', data-slide='next')
